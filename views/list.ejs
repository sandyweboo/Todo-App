  <body>
    <div class="box" id="heading">
        <h1><%= listTitle %></h1>
      </div>
      <div class="box">
    
      <% for(var item = 0; item < items.length; item++) { %>
        <div class="item">
            <input type="checkbox" />
        <p><%= items[item] %></p>
    </div>
      <% } %>
  
    <form action="/" method="post">
      <input type="text" name="newItem" placeholder="Add Item"/>
      <button type="submit" name="button" value="<%= listTitle %>">
       +
      </button>
    </form>
</div>
  </body>
</html>
